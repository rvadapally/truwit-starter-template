{
  "Auth0": {
    "Domain": "your-tenant.us.auth0.com",
    "Audience": "https://api.humanproof.local"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:4200",
      "https://truwit.ai",
      "https://truwit.net"
    ]
  },
  "Database": {
    "Type": "sqlite"
  },
  "ConnectionStrings": {
    "Sqlite": "Data Source=truwit.db",
    "Postgres": "Host=localhost;Database=truwit;Username=postgres;Password=password"
  },
  "Truwit": {
    "HmacSecret": "change-this-secret-in-production",
    "PublicBase": "https://truwit.ai",
    "ApiBase": "https://api.truwit.ai"
  },
  "Limits": {
    "MaxBytes": 500000000,
    "RequestTimeoutSeconds": 300
  },
  "MediaInfo": {
    "FfprobePath": "ffprobe"
  },
  "C2pa": {
    "UseHostedVerifier": true,
    "HostedVerifierBaseUrl": "https://verify.contentcredentials.org/api",
    "RequestTimeoutSeconds": 20
  },
  "Downloader": {
    "Bin": "yt-dlp",
    "TempDir": "C:\\temp\\truwit_dl",
    "TimeoutSeconds": 90,
    "MaxBytes": 2147483648
  },
  "C2paTool": {
    "Bin": "c2patool",
    "TimeoutSeconds": 20
  },
  "MockMode": {
    "Enabled": false,
    "SkipDownload": false,
    "SkipC2paTool": false
  },
  "Features": {
    "DevImageTestMode": true,
    "SyntheticSignTool": true
  }
}